{
  "name": "auth",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy --minify src/index.ts",
    "migrate:local": "wrangler d1 execute edge-cms-auth-example --file './schema.sql' --local",
    "migrate:remote": "wrangler d1 execute edge-cms-auth-example --file './schema.sql' --remote",
    "testsql": "wrangler d1 execute edge-cms-auth-example --file './test.sql' --local",
    "reset:local": "rm -rf .wrangler/state/v3/d1 && pnpm migrate:local && pnpm testsql"
  },
  "dependencies": {
    "hono": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "wrangler": "catalog:",
    "@repo/auth": "workspace:*"
  }
}